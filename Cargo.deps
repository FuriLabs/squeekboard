# Dependencies which change based on build flags
bitflags = "1.2.*"
clap = { version = "2.33.*", default-features = false }
regex = { version = "1.3.*", default-features = false, features = ["std", "unicode-case"] }

[dependencies.cairo-rs]
version = "0.7.*"

[dependencies.gdk]
version = "0.11.*"

[dependencies.gio]
version = "0.7.*"
features = ["v2_44"]

[dependencies.glib]
version = "0.8.*"
features = ["v2_44"]

[dependencies.gtk]
version = "0.7.*"
features = ["v3_22"]
